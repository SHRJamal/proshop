{
  "name": "proshop",
  "version": "1.0.0",
  "description": "MERN shopping cart app",
  "main": "backend/server.ts",
  "author": "Jamal .S <me@shrjamal.com>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run server\" \" npm run client \" ",
    "server": "tsnd --respawn backend/server.ts",
    "client": "npm run dev --prefix frontend",
    "build": "npm run build --prefix frontend",
    "start": "ts-node backend/server.ts",
    "seeder": "tsnd --respawn backend/tools/seeder.ts",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm i --prefix frontend && npm run build --prefix frontend",
    "format": "prettier --write \"**/*.{html,css,js,ts,jsx,tsx}\""
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "colors": "1.4.0",
    "dotenv": "14.3.2",
    "express": "4.17.2",
    "joi": "^17.6.0",
    "jsonwebtoken": "8.5.1",
    "mongoose": "6.1.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/express": "4.17.13",
    "@types/jsonwebtoken": "8.5.8",
    "@types/node": "^17.0.13",
    "concurrently": "7.0.0",
    "ts-node": "^10.4.0",
    "ts-node-dev": "1.1.8",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.8.0",
    "prettier": "^2.5.1",
    "tslib": "^2.3.1",
    "eslint-plugin-prettier": "^4.0.0"
  }
}
