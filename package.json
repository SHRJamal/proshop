{
  "name": "proshop",
  "version": "1.0.0",
  "description": "MERN shopping cart app",
  "main": "backend/server.ts",
  "author": "Jamal .S <me@shrjamal.com>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run server\" \" npm run client \" ",
    "server": "tsnd --respawn backend/server.ts",
    "client": "npm run dev --prefix frontend",
    "start": "ts-node backend/server.ts",
    "seeder": "tsnd --respawn backend/tools/seeder.ts",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm i --prefix frontend && npm run build --prefix frontend"
  },
  "dependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/express": "4.17.12",
    "@types/jsonwebtoken": "8.5.2",
    "@types/mongoose": "5.11.97",
    "@types/node": "15.12.5",
    "bcryptjs": "2.4.3",
    "colors": "1.4.0",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "joi": "^17.4.0",
    "jsonwebtoken": "8.5.1",
    "mongoose": "5.12.15",
    "ts-mongoose": "0.0.24",
    "ts-node": "^10.0.0",
    "typescript": "~4.3.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.28.0",
    "@typescript-eslint/parser": "4.28.0",
    "concurrently": "6.2.0",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "prettier": "2.3.2",
    "ts-node-dev": "1.1.6"
  }
}
