{
  "name": "proshop",
  "version": "1.0.0",
  "description": "MERN shopping cart app",
  "main": "backend/server.ts",
  "author": "Jamal .S <me@shrjamal.com>",
  "license": "MIT",
  "engines": {
    "node": "v16.0.0",
    "npm": "7.10.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run server\" \" npm run client \" ",
    "server": "tsnd --respawn backend/server.ts",
    "client": "npm run dev --prefix frontend",
    "start": "ts-node backend/server.ts",
    "seeder": "tsnd --respawn backend/tools/seeder.ts",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm i --prefix frontend && npm run build --prefix frontend"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.7",
    "ts-mongoose": "^0.0.24"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mongoose": "^5.10.5",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "colors": "^1.4.0",
    "concurrently": "^6.0.2",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "mongodb-memory-server": "^6.9.6",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "~4.2.4"
  }
}
